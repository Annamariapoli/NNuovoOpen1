<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.65" fx:controller="application.SampleController">
   <top>
      <Label text="Open" BorderPane.alignment="CENTER" />
   </top>
   <center>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <HBox>
               <children>
                  <Label text="Compagnia aerea" />
                  <ComboBox fx:id="comboCompagnia" prefWidth="150.0" />
                  <Button fx:id="bntAereoportiServiti" mnemonicParsing="false" onAction="#doServiti" text="Aereoporti serviti" />
               </children>
            </HBox>
            <HBox>
               <children>
                  <Label text="Aereoporto" />
                  <ComboBox fx:id="comboAereo" prefWidth="150.0" />
                  <Button fx:id="btnRaggiunbibili" mnemonicParsing="false" onAction="#doRaggiungibili" text="Raggiungibili" />
               </children>
               <VBox.margin>
                  <Insets bottom="20.0" top="20.0" />
               </VBox.margin>
            </HBox>
            <HBox>
               <children>
                  <TextArea fx:id="txtResult" editable="false" />
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
</BorderPane>
